<div class="card mt-5" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title"><%= @restaurant.name %></h3>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p class="card-text"><%= @restaurant.category %></p>
    <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
  </div>
</div>

<div class="card mt-3" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <% @reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %></li>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
</div>
