<div class="card mt-5" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title"><%= @restaurant.name %></h3>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p class="card-text"><%= @restaurant.category %></p>
  </div>
</div>

<div class="card text-white bg-dark my-3" style="max-width: 18rem;">
  <div class="card-header">Reviews</div>
  <% @reviews.each do |review| %>
  <div class="card-body">
    <h5 class="card-title"><%= review.rating %></h5>
    <p class="card-text"><%= review.content %></p>
  </div>
  <% end %>
</div>

<%= link_to "<button type='button' class='btn btn-primary'>Add a review</button>".html_safe,  new_restaurant_review_path(@restaurant) %>
